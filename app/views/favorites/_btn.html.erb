<% if book.favorited_by?(current_user) %>
  <%= link_to book_favorite_path(book), method: :delete,  style: "color: red;", local: false do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= book.favorites.count %>
  <% end %>
<% else %>
  <%= link_to book_favorite_path(book), method: :post, local: false do %>
    <i class="fas fa-heart" aria-hidden="true"></i>
    <%= book.favorites.count %>
  <% end %>
<% end %>